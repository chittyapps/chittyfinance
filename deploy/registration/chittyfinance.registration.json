{
  "name": "chittyfinance",
  "description": "AI-powered financial operations for the ChittyOS ecosystem. Provides intelligent financial tracking, multi-account Mercury integration via ChittyConnect, and an AI CFO assistant.",
  "version": "1.0.0",
  "endpoints": [
    { "path": "/health", "method": "GET", "auth": false },
    { "path": "/api/v1/status", "method": "GET", "auth": false },
    { "path": "/api/v1/metrics", "method": "GET", "auth": false },
    { "path": "/api/accounts", "method": "GET", "auth": true },
    { "path": "/api/accounts/:id/transactions", "method": "GET", "auth": true },
    { "path": "/api/summary", "method": "GET", "auth": true }
  ],
  "schema": {
    "version": "1.0.0",
    "entities": [
      "users",
      "tenants",
      "tenantUsers",
      "accounts",
      "transactions",
      "intercompanyTransactions",
      "properties",
      "units",
      "leases",
      "integrations",
      "tasks",
      "aiMessages"
    ]
  },
  "security": {
    "authentication": "jwt",
    "encryption": "tls"
  }
}
